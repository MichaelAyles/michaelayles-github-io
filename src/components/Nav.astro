---
interface Props {
  current?: string;
}
const { current = '' } = Astro.props;
---

<nav class="nav">
  <div class="nav-inner">
    <a href="/" class="nav-brand">Michael Ayles</a>
    <div class="nav-right">
      <div class="nav-links">
        <a href="/" class:list={['nav-link', { active: current === 'blog' }]}>Blog</a>
        <a href="/rss.xml" class="nav-link rss" target="_blank" aria-label="RSS Feed">RSS</a>
        <a href="/projects" class:list={['nav-link', { active: current === 'projects' }]}>Projects</a>
        <a href="/about" class:list={['nav-link', { active: current === 'about' }]}>About</a>
      </div>
      <slot />
    </div>
  </div>
</nav>

<style>
  .nav {
    border-bottom: 1px solid var(--border);
    background: var(--background);
    position: sticky;
    top: 0;
    z-index: 50;
  }

  .nav-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-brand {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--text-primary);
  }

  .nav-link.active {
    font-weight: 600;
  }

  .nav-link.rss {
    font-size: 0.75rem;
    padding: 0.15rem 0.4rem;
    border: 1px solid var(--border);
    border-radius: 3px;
  }

  .nav-link.rss:hover {
    border-color: var(--text-primary);
  }

  @media (max-width: 500px) {
    .nav-inner {
      padding: 0.75rem 1rem;
    }

    .nav-right {
      gap: 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-brand {
      font-size: 1rem;
    }

    .nav-link {
      font-size: 0.8rem;
    }
  }
</style>
