---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import ThemeToggle from '../../components/ThemeToggle.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { cleanSlug, formatDate } from '../../utils';

const PAGE_SIZE = 10;

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sorted = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const totalPages = Math.ceil(sorted.length / PAGE_SIZE);
const posts = sorted.slice(0, PAGE_SIZE);
---

<BaseLayout title="All Posts" description="Blog posts by Michael Ayles">
  <Nav current="blog"><ThemeToggle /></Nav>

  <main class="main">
    <h1 class="page-title">All Posts</h1>

    <div class="posts-grid">
      {posts.map(post => (
        <a href={`/blog/${cleanSlug(post.id)}`} class="post-card">
          <time class="post-date">{formatDate(post.data.date)}</time>
          <h3 class="post-title">{post.data.title}</h3>
          <p class="post-desc">{post.data.description}</p>
          <div class="post-tags">
            {post.data.tags.slice(0, 2).map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>

    {totalPages > 1 && (
      <nav class="pagination">
        <span class="pagination-prev disabled">Prev</span>
        <span class="pagination-info">Page 1 of {totalPages}</span>
        <a href="/blog/page/2/" class="pagination-next">Next</a>
      </nav>
    )}

    <Footer />
  </main>
</BaseLayout>

<style>
  .main {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: 2rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .post-card {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--text-secondary);
    background: var(--hover-bg);
  }

  .post-date {
    font-size: 0.8rem;
    color: var(--text-secondary);
    display: block;
    margin-bottom: 0.5rem;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .post-desc {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    border: 1px solid var(--border);
    border-radius: 3px;
    color: var(--text-secondary);
  }

  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .pagination-prev,
  .pagination-next {
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 0.4rem 1rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .pagination-prev:not(.disabled):hover,
  .pagination-next:not(.disabled):hover {
    border-color: var(--text-secondary);
    color: var(--text-primary);
  }

  .pagination-prev.disabled,
  .pagination-next.disabled {
    opacity: 0.4;
    cursor: default;
  }

  .pagination-info {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  @media (max-width: 700px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
