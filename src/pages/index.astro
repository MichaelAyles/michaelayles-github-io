---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import { cleanSlug, formatDate } from '../utils';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sorted = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const featuredPost = sorted.find(p => p.data.featured) || sorted[0];
const recentPosts = sorted.filter(p => p.id !== featuredPost.id).slice(0, 8);
---

<BaseLayout title="Michael Ayles" description="Blog & Portfolio - Electronics & Embedded Systems Engineer">
  <Nav current="blog"><ThemeToggle /></Nav>

  <main class="main">
    <!-- Hero Featured Post -->
    <section class="hero">
      <a href={`/blog/${cleanSlug(featuredPost.id)}`} class="hero-card">
        <span class="hero-badge">Featured</span>
        <h1 class="hero-title">{featuredPost.data.title}</h1>
        <p class="hero-desc">{featuredPost.data.description}</p>
        <div class="hero-meta">
          <time>{formatDate(featuredPost.data.date)}</time>
          <span class="hero-tags">
            {featuredPost.data.tags.slice(0, 3).map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </span>
        </div>
      </a>
    </section>

    <!-- Recent Posts Grid -->
    <section class="recent">
      <h2 class="section-title">Recent Posts</h2>
      <div class="posts-grid">
        {recentPosts.map(post => (
          <a href={`/blog/${cleanSlug(post.id)}`} class="post-card">
            <time class="post-date">{formatDate(post.data.date)}</time>
            <h3 class="post-title">{post.data.title}</h3>
            <p class="post-desc">{post.data.description}</p>
            <div class="post-tags">
              {post.data.tags.slice(0, 2).map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </section>

    <Footer />
  </main>
</BaseLayout>

<style>
  .main {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero */
  .hero {
    padding: 3rem 0;
  }

  .hero-card {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 3rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: all 0.2s ease;
    background: var(--surface);
  }

  .hero-card:hover {
    border-color: var(--text-secondary);
    background: var(--hover-bg);
  }

  .hero-badge {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    font-weight: 600;
    margin-bottom: 1rem;
    display: block;
  }

  .hero-title {
    font-size: 2rem;
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-desc {
    font-size: 1.05rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    max-width: 700px;
  }

  .hero-meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .hero-tags {
    display: flex;
    gap: 0.5rem;
  }

  /* Posts Grid */
  .recent {
    padding-bottom: 2rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .post-card {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--text-secondary);
    background: var(--hover-bg);
  }

  .post-date {
    font-size: 0.8rem;
    color: var(--text-secondary);
    display: block;
    margin-bottom: 0.5rem;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .post-desc {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    border: 1px solid var(--border);
    border-radius: 3px;
    color: var(--text-secondary);
  }

  @media (max-width: 700px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .hero-card {
      padding: 2rem;
    }

    .hero-title {
      font-size: 1.5rem;
    }
  }
</style>
